<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightMagenta"
    tools:context=".Buy">

    <TextView
        android:id="@+id/textBuy"
        android:layout_width="418dp"
        android:layout_height="64dp"
        android:background="@color/dullMagenta"
        android:fontFamily="@font/amaranth_italic"
        android:textAlignment="center"
        android:textColor="@color/darkBrown"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/buyTitle" />

    <ListView
        android:id="@+id/buyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp">

    </ListView>

    <Button
        android:id="@+id/add_buy"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"

        android:backgroundTint="@color/dullMagenta"
        android:text="@string/add"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent" />

</FrameLayout>